# API Configuration
# In development, this should be the full URL to the backend API
# In production with the same domain, use the relative path
VITE_API_URL=/api

# MQTT Configuration
# WebSocket URL for the MQTT broker - required for real-time updates
# format: ws://hostname:port or wss://hostname:port for secure connections
VITE_MQTT_URL=ws://localhost:9001

# MQTT Topic Prefix
# All sensor data will be published under this prefix
VITE_MQTT_TOPIC_PREFIX=sensors/

# UI Configuration
# Enable/disable debug information in the UI
VITE_ENABLE_DEBUG=false

# Default language (en for English, sk for Slovak)
VITE_DEFAULT_LANGUAGE=en

# Default theme (light or dark)
VITE_DEFAULT_THEME=light

# Chart update interval in milliseconds (5000 = 5 seconds)
VITE_CHART_UPDATE_INTERVAL=5000

# Maximum data points to show in charts
VITE_MAX_DATAPOINTS=100

# Logging Configuration
# Controls which types of logs are shown in the browser console
# Options: ALL, ERRORS_ONLY, NONE
VITE_CONSOLE_LOG_LEVEL=ERRORS_ONLY

# Suppress authentication errors in console
# Set to true to hide 401 Unauthorized errors
VITE_SUPPRESS_AUTH_ERRORS=true

# Legacy setting - use VITE_CONSOLE_LOG_LEVEL instead
# Set to true to disable all logs except errors
VITE_DISABLE_LOGS=false
