# InfluxDB Configuration
# Replace with your InfluxDB server URL (default: http://localhost:8086)
URL=http://localhost:8086

# Your InfluxDB API token (required)
# Generated in the InfluxDB UI (Data -> Tokens)
INFLUX_TOKEN=your-influx-token-here

# Your organization name in InfluxDB
ORG=your-organization-name

# The bucket where sensor data is stored
BUCKET=sensor_data

# Server Configuration
PORT=5000

# MQTT Configuration
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=dashboard-backend

# Debug Mode (set to 'true' for development, 'false' for production)
DEBUG=false

# Authentication Configuration
ADMIN_PASSWORD_HASH=$2b$10$exampleHashReplaceMeWithActualHash
SESSION_SECRET=generate-a-secure-random-string-here
SESSION_MAX_AGE=3600000  # Session timeout in milliseconds (1 hour)

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15  # Time window in minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173

VITE_INFLUX_URL=http://localhost:8086
VITE_INFLUX_TOKEN=your_token_here
VITE_ORG=your_org
VITE_BUCKET=sensor_data

VITE_API_URL=http://localhost:5000

# Cache settings
CACHE_ENABLED=true
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Connection pool settings
DB_POOL_SIZE=5

# Message queue settings
QUEUE_ENABLED=true
QUEUE_TYPE=memory
MAX_MEMORY_QUEUE_SIZE=1000

# Logging Configuration
# Log level - options: debug, info, warn, error
LOG_LEVEL=info

# Log format - options: simple, json, dev
LOG_FORMAT=json

# Enable advanced logging features (rotation, aggregation, metrics)
ENABLE_ADVANCED_LOGGING=true

# Number of days to retain logs before rotation
LOG_RETENTION_DAYS=30

# Write logs to file
LOG_TO_FILE=true
LOG_FILE_PATH=logs/server.log

# Maximum log file size in MB before rotation
LOG_MAX_SIZE=10

# Maximum number of log files to keep
LOG_MAX_FILES=5

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1 